{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Poll",
  "type": "object",
  "required": [
    "allows_answer_edits",
    "allows_multiple_answers",
    "end_date",
    "provided_answers",
    "question"
  ],
  "properties": {
    "allows_answer_edits": {
      "type": "boolean"
    },
    "allows_multiple_answers": {
      "type": "boolean"
    },
    "end_date": {
      "type": "string"
    },
    "provided_answers": {
      "type": "array",
      "items": {
        "$ref": "#/definitions/ProvidedAnswer"
      }
    },
    "question": {
      "type": "string"
    }
  },
  "definitions": {
    "ProvidedAnswer": {
      "type": "object",
      "required": [
        "answer_id",
        "text"
      ],
      "properties": {
        "answer_id": {
          "type": "string"
        },
        "text": {
          "type": "string"
        }
      }
    }
  }
}
